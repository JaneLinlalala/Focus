.container {
  display: flex;
  height: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #3197ed;
}

.timer_main {
  position: relative;
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color:white;
  transition: all .5s;
  z-index: 1;
  padding: 20rpx 0;
}

.timer_time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  transition: all .3s;
}
.picker{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 150rpx;
  height: 300rpx;
  overflow: hidden;
  transition: all .3s;
}

.timer_progress_mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 8rpx solid #1589eb;
  opacity: .5;
  border-radius: 50%;
}

.timer_left {
  left: 0;
}

.timer_right {
  right: 0;
}

.timer_circle {
  position: absolute;
  top: 0;
  width: 300rpx;
  height: 300rpx;
  border: 6rpx solid transparent;
  border-radius: 50%;
  transition: all .3s;
}

.timer_circle--left {
  left: 0;
  border-left: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
  transform: rotate(45deg);
}

.timer_circle--right {
  right: 0;
  border-right: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
  transform: rotate(-45deg);
}

.timer_time {
  font-size: 80rpx;
  color:#3197ed;
  font-weight: lighter;
  transition: font-size .3s;
}

.timer_taskName {
  position: absolute;
  top: -200rpx;
  font-size: 28rpx;
  letter-spacing: 10rpx;
  color:#3197ed;
}

.timer_done {
  width: 128rpx;
  height: 128rpx;
}

.timer_inputname {
  position: absolute;
  bottom: -80rpx;
  width: 100%;
  text-align: center;
  height: 80rpx;
  padding-left: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
  color: #999;
}

.timer_footer {
  display: flex;
  background-color: white;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding-top: 40rpx;
  transition: all .3s;
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #fff;
  width: 160rpx;
  height: 60rpx;
  margin: 0 40rpx;
  border-radius: 5%;
  transition: all .7s;
  background-color: #3197ed;
}
.share_navigator{
  display: flex;
  justify-content: center;
}
.share_icon{
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 20rpx;
}

.timer_button{
 display: flex;
 justify-content: flex-end;
 width: 100%;
 height: 150rpx;
 background-color: white;
 padding-bottom: 20rpx;
}
.timer_icon{
  height: 70rpx;
  width: 70rpx;
  margin-right: 50rpx;
}


/*runing style*/

.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 90rpx;
}

.timer--runing .timer_time-wrap {
  width: 400rpx;
  height: 400rpx;
}

.timer--runing .timer_progress {
  width: 200rpx;
  height: 400rpx;
}

.timer--runing .timer_circle {
  width: 400rpx;
  height: 400rpx;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.timer--runing .timer_ctrl {
  background-color: #208DEA;
  height: 60rpx;
  margin-bottom: 60rpx;
  border: 2rpx;
  border-radius: 5%;
}
